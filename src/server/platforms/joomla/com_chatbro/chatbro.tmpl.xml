<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="<%- cfg.joomla_version %>" method="upgrade">
  <name>COM_CHATBRO</name>
  <version><%- cfg.common_version %>.<%- cfg.joomla_plugin_minor_version %></version>
  <description>COM_CHATBRO_DESCRIPTION</description>
  <author>ChatBro Team</author>
  <creationDate>Feb 2017</creationDate>
  <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
  <authorUrl>https://www.chatbro.com</authorUrl>

  <scriptfile>script.php</scriptfile>

  <files folder="site">
    <filename>index.html</filename>
  </files>

  <media destination="com_chatbro" folder="media">
    <filename>index.html</filename>
    <folder>css</folder>
    <folder>fonts</folder>
    <folder>js</folder>
  </media>

  <administration>
    <menu img="../media/com_chatbro/images/chatbro.png" link="index.php?option=com_chatbro">COM_CHATBRO</menu>

    <files folder="admin">
      <filename>index.html</filename>
      <filename>controller.php</filename>
      <filename>config.xml</filename>
      <filename>access.xml</filename>
      <filename>chatbro.php</filename>
      <folder>views</folder>
      <folder>language</folder>
    </files>
  </administration>

</extension>
