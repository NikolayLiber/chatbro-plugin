<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="<%- cfg.joomla_version %>" method="upgrade">
  <name>ChatBro</name>
  <version><%- cfg.common_version %>.<%- cfg.joomla_plugin_minor_version %></version>
  <description>ChatBro is a live group chat between your site members that could be syncronized with Telegram and VK</description>
  <author>ChatBro Team</author>
  <creationDate>Feb 2017</creationDate>
  <copyright>(C) 2017 ChatBro.</copyright>
  <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
  <authorEmail>fwnd80@gmail.com</authorEmail>
  <authorUrl>https://www.chatbro.com</authorUrl>

  <files folder="site">
    <filename>index.html</filename>
  </files>

  <media destination="com_chatbro" folder="media">
    <filename>index.html</filename>
    <folder>css</folder>
    <folder>fonts</folder>
    <folder>js</folder>
  </media>

  <administration>
    <menu link="index.php?option=com_chatbro">Chatbro Chat</menu>

    <files folder="admin">
      <folder>language</folder>
      <filename>index.html</filename>
      <filename>controller.php</filename>
      <filename>config.xml</filename>
      <filename>access.xml</filename>
      <filename>chatbro.php</filename>
      <folder>views</folder>
      <folder>language</folder>
    </files>
  </administration>

</extension>
